# CitationMap Environment Variables Template
# Copy this file to .env and fill in your API keys
# Do not commit the .env file to version control!

# === Required API Keys ===

# OpenAlex API (optional, for higher rate limits)
# Get key at: https://docs.openalex.org/how-to-use-the-api/rate-limits-and-authentication
OPENALEX_EMAIL=""  # Your email for polite access
OPENALEX_API_KEY=""  # Optional API key for higher limits

# Lens.org API (required for patent citation data)
# Request token at: https://www.lens.org/lens/user/subscriptions/api
LENS_API_TOKEN=""

# === Optional Configuration ===

# Cache settings
CACHE_DIR=".cache"
CACHE_EXPIRE_AFTER="604800"  # 1 week in seconds

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="citationmap.log"

# Output settings
OUTPUT_DIR="outputs"

# Geocoding (for institution mapping)
GEOPY_USER_AGENT="CitationMap/0.1.0"

# === Development Settings ===

# Testing
TESTING="false"
TEST_CACHE_DIR="tests/.cache"

# Debug mode
DEBUG="false"
